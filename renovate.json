{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPaths": ["dashboard/**"],
      "groupName": "dashboard-js",
      "schedule": ["before 3am on the first day of the month"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPaths": ["go.mod"],
      "groupName": "go-mod",
      "schedule": ["before 3am on the first day of the month"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPaths": [".github/**"],
      "groupName": "github-actions",
      "schedule": ["before 3am on the first day of the month"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
